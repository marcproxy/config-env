{
  "source": {
    "include": ["src"],
    "exclude": ["src/tests", "node_modules"],
    "includePattern": ".+\\.js(x)?$"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "readme": "./README.md"
  }
}